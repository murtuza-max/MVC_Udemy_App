@model System.Collections.Generic.List<WebApplication1.Models.Category>

@*create a form template that will be used to create a new category*@
<form asp-controller="Category" asp-action="Create" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
        </div>
         <div class="mb-3">
        <label for="categoryName">Category Name</label>
        <input type="text" class="form-control" id="categoryName" name="categoryName" placeholder="Category Name">
        </div>
        <div class="mb-3">
            <label for="categoryName">Display Order</label>
            <input type="text" class="form-control" id="displayOrder" name="displayOrder" placeholder="Display Order">
        </div>


        @*<input type="hidden" name="categoryId" value="@ViewBag.CategoryId"/>
        <input type="hidden" name="categoryName" value="@ViewBag.CategoryName"/>
        <input type="hidden" name="categoryDescription" value="@ViewBag.CategoryDescription"/>*@
        <button type="submit" class="btn btn-primary mt-4">Create</button>
    </div>
</form>
